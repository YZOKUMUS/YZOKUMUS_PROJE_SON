rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Kullanıcı sadece kendi verilerine erişebilir
    match /user_stats/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    match /daily_tasks/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Word stats (opsiyonel - şu an localStorage'da)
    match /word_stats/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Weekly leaderboard (public read, authenticated write)
    match /weekly_leaderboard/{docId} {
      // Anyone can read leaderboard (public ranking)
      allow read: if true;
      // Only authenticated users can write their own data
      allow write: if request.auth != null && 
                     (request.resource.data.user_id == request.auth.uid || 
                      resource == null && request.resource.data.user_id == request.auth.uid);
    }
  }
}

